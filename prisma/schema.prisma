generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Department {
  ID             String      @id @db.NVarChar(50)
  DepartmentName String    @db.NVarChar(50)
  Location       String?   @db.NVarChar(100)
  employees     Employee[]

  @@map("Departments")
}

model Employee {
  ID           String     @id 
  FirstName    String     @db.NVarChar(50)
  LastName     String     @db.NVarChar(50)
  Email        String     @db.NVarChar(100) @unique
  Salary       Float      @db.Float
  DepartmentID String     @db.NVarChar(50)
  Department   Department @relation(fields: [DepartmentID], references: [ID])

  @@index([DepartmentID], name: "IX_Employee_DepartmentID")

  @@map("Employees")
}